<div class="container home-page__container">
    {{ include('partials/components/text', { heading, text }) }}
</div>

{% schema %}
{
    "heading": {
        "type": "string"
    },
    "text": {
        "type": "string"
    }
}
{% endschema %}

{% editor %}
{
    "name": "Text",
    "controls": [
        {
            "option": "input",
            "label": "Heading",
            "value": {
                "$ref": "#/schema/heading"
            }
        },
        {
            "option": "textarea",
            "label": "Text",
            "value": {
                "$ref": "#/schema/text"
            }
        }
    ]
}
{% endeditor %}

{{ register_asset('css/ui/google-map.css') }}

{% set pincolor = config.theme.shouldUseSiteStyles ? square.site.styles.colors.primary|replace({'#': ''}) : '000000' %}
{% set pincontrastcolor = config.theme.shouldUseSiteStyles ? square.site.styles.colors.primary_contrast|replace({'#': ''}) : 'ffffff' %}
{% set googleMapConfig = { pincolor, pincontrastcolor }|merge(mapConfig) %}

<iframe
    class="ui-google-map"
    src="{{ googleMapConfig|embed_map_url }}"
    allowtransparency="true"
    frameborder="0"
    scrolling="no"
    loading="lazy"
    width="100%"
    height="{{ googleMapConfig.height|default('230px') }}"
    {% block attributes %}{% endblock %}
>
</iframe>